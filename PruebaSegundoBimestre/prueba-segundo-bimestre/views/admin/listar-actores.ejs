<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Actores</title>

    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous">

    <style>
        .separador{
            margin: 50px;
        }
    </style>

</head>
<body>

<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
        <div class="separador"></div>
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">Bienvenido <%=nombreUsuario%></h3>
                <h5 class="card-subtitle mb-2 text-muted">Lista de actores</h5>
                <table class="table table-hover text-center">
                    <thead>
                    <tr>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Fecha de nacimiento</th>
                        <th>Número de películas</th>
                        <th>Gestionar</th>
                    </tr>
                    </thead>
                    <tbody>
                    <%actores.forEach((actor)=>{%>
                    <tr>
                        <td><%=actor.nombresActor%></td>
                        <td><%=actor.apellidosActor%></td>
                        <td><%=actor.fechaNacimientoActor%></td>
                        <td><%=actor.numeroPeliculasActor%></td>
                        <td>
                            <form action="/api/pelicula/listar-peliculas/<%=actor.id%>"
                            method="post">
                                <button class="btn btn-outline-success">Películas</button>
                            </form>
                        </td>
                    </tr>
                    <%})%>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <div class="col-sm-1"></div>
</div>
</body>
</html>