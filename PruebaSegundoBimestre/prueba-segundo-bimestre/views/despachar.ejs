            </div>
            </div>
        </div>
    </div>
    <div class="col-sm-1"></div>
</div>



<script>

    const url = 'http://localhost:3001/websockets';
    const socket = io(url);
    socket.on(
        'connect', //nombre del evento
        ()=>{
            console.log('Estamos conectados');
            //socket.disconnect();
            //socket.connect()
        }
    );
    socket.on(
        'comprado',
        (pedido)=>{
            console.log(pedido);
        }
    )
</script>

